---
import type { BlokContentCallout } from '@libs/space-blok'
import { hexToCssRgba } from '@libs/space-utils'

import ContentRichText from './ContentRichText.astro'

export type Props = {
  content: BlokContentCallout
}

const { content } = Astro.props
const color = content.color ?? '#fff'
const backgroundColor = hexToCssRgba(color, 0.1)
---

<blockquote
  class="rounded bg-opacity-10 p-4 flex flex-row gap-3 mb-2"
  style={content.color
    ? `color: ${color}; background-color: ${backgroundColor};`
    : ''}
>
  <span>{content.emoji}</span>
  <p class="m-0"><ContentRichText elements={content.elements} /></p>
</blockquote>
