---
import type { BlokContentList } from '@libs/space-blok'

import ContentRichText from './ContentRichText.astro'

export type Props = {
  content: BlokContentList
}

const { content } = Astro.props
---

<ol class="list-decimal pl-8">
  {
    content.list.map((elements) => (
      <li>
        <ContentRichText elements={elements} />
      </li>
    ))
  }
</ol>
